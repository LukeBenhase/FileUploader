<% var files = typeof files !== 'undefined' ? files : []; %> <% var folders =
typeof folders !== 'undefined' ? folders : []; %> <% var folderInfo = typeof
folderInfo !== 'undefined' ? folderInfo : null; %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Page</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <% if (locals.user) { %>
    <header>
      <h1>Welcome, <%= user.username %>!</h1>
    </header>
    <main>
      <form action="/logout" method="POST">
        <button type="submit">Log Out</button>
      </form>
      <div class="container">
        <% if (folderInfo != null) { %>
        <h2>Current Folder: <%= folderInfo.name %></h2>

        <form
          action="/folders/<%= folderInfo ? folderInfo.parentID : null %>"
          method="GET"
        >
          <button type="submit">Back</button>
        </form>
        <% } %>
        <h2>Your Folders</h2>
        <div class="cards">
          <% folders.forEach(function(folder) { %>
          <div class="card">
            <form action="/folders/<%= folder.id %>" method="GET">
              <button type="submit">
                <strong><%= folder.name %></strong><br />
              </button>
            </form>
            <form action="/folders/edit/<%= folder.id %>" method="GET">
              <button type="submit"><strong>edit</strong><br /></button>
            </form>
          </div>
          <% }) %>
          <form
            action="/create-folder/<%= folderInfo ? folderInfo.id : null %>"
            method="POST"
            style="margin-top: 16px"
          >
            <input type="text" name="name" placeholder="Folder Name" required />
            <button type="submit">Create Folder</button>
          </form>
        </div>
        <h2>Your Files</h2>
        <div class="cards">
          <% files.forEach(function(file) { %>
          <div class="card">
            <strong><%= file.name %></strong><br />
            Size: <%= file.size %> bytes<br />
            <a href="/files/<%= file.id %>">Info</a>
          </div>
          <% }) %>
        </div>
        <form
          action="/create-card/<%= folderInfo ? folderInfo.id : null %>"
          method="POST"
          style="margin-top: 16px"
          enctype="multipart/form-data"
        >
          <input type="text" name="name" placeholder="Card Title" required />
          <input type="file" name="file" />
          <input type="checkbox" name="isShareable" /> Public
          <button type="submit">Create Card</button>
        </form>
      </div>
    </main>
    <% } else { %>
    <p>You are not logged in. Please <a href="/login">log in</a>.</p>
    <% } %>
    <style>
      .container {
        margin-top: 32px;
        background: #f9f9f9;
        padding: 24px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
      }
      .cards {
        display: flex;
        gap: 16px;
        margin-bottom: 12px;
      }
      .card {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 20px 32px;
        min-width: 120px;
        text-align: center;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
      }
    </style>
  </body>
</html>
