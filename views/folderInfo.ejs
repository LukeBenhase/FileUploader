<!DOCTYPE html>
<html>
  <head>
    <title>Folder Info</title>
  </head>
  <body>
    <h1>Folder Information</h1>
    <form action="/folders/edit/<%= folder.id %>" method="POST">
      <label for="name">Folder Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= folder.name %>"
        required
      /><br /><br />

      <button type="submit">Update Folder</button>
    </form>

    <form
      action="/folders/delete/<%= folder.id %>"
      method="POST"
      style="margin-top: 10px"
    >
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this folder?');"
      >
        Delete Folder
      </button>
    </form>
  </body>
</html>
